# Dart files (Flutter project)
*.dart               text eol=lf

# Text files
*.yaml               text eol=lf
*.xml                text eol=lf
*.json               text eol=lf
*.gradle             text eol=lf
*.properties         text eol=lf
*.md                 text eol=lf

# Android Studio / IntelliJ project files
*.iml                text eol=lf
.idea/*              text eol=lf
*.pro                text eol=lf

# Flutter specific
android/**/GeneratedPluginRegistrant.java binary
ios/**/GeneratedPluginRegistrant.*        binary

# Native C++ / CMake files for Android and iOS
*.cpp                text eol=lf
*.h                  text eol=lf
*.c                  text eol=lf
*.m                  text eol=lf
*.mm                 text eol=lf
*.swift              text eol=lf
CMakeLists.txt       text eol=lf

# Images (treat as binary)
*.png                binary
*.jpg                binary
*.jpeg               binary
*.gif                binary

# Don't track generated files
pubspec.lock         binary
**/build/*           binary
**/.dart_tool/*      binary
**/ios/Pods/*        binary
**/android/.cxx/*    binary
